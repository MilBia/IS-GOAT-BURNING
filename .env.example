#
# Then, fill in the necessary values for your setup.

# --- Core Settings ---
SOURCE="https://youtu.be/vDFPpkp9krY"
FIRE_DETECTION_THRESHOLD=0.1
LOGGING="INFO"
VIDEO_OUTPUT=false
CHECKS_PER_SECOND=1.0

# --- Performance & Streaming ---
OPEN_CL=false
CUDA=false
RECONNECT_DELAY_SECONDS=5
STREAM_INACTIVITY_TIMEOUT=60

# --- Debouncing (Advanced) ---
# Time in seconds an event must be consistently detected before it is triggered.
# Helps prevent false positives from brief flickers.
FIRE_DETECTED_DEBOUNCE_SECONDS=0.0
FIRE_EXTINGUISHED_DEBOUNCE_SECONDS=5.0

# --- Email Settings ---
EMAIL__USE_EMAILS=false
EMAIL__SENDER=""
EMAIL__SENDER_PASSWORD=""
EMAIL__RECIPIENTS=""
EMAIL__EMAIL_HOST=""
EMAIL__EMAIL_PORT=""

# --- Discord Settings ---
DISCORD__USE_DISCORD=false
DISCORD__HOOKS=""

# --- Video Archiving ---
VIDEO__SAVE_VIDEO_CHUNKS=false
VIDEO__VIDEO_OUTPUT_DIRECTORY="./recordings"
# Buffer mode: 'disk' is safer and uses low RAM. 'memory' is faster (less I/O) but uses more RAM.
VIDEO__BUFFER_MODE=memory
VIDEO__MEMORY_BUFFER_SECONDS=60
VIDEO__VIDEO_CHUNK_LENGTH_SECONDS=300
VIDEO__MAX_VIDEO_CHUNKS=20
VIDEO__CHUNKS_TO_KEEP_AFTER_FIRE=10
VIDEO__RECORD_DURING_FIRE=false
