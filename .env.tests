# [Test Environment Configuration]
# This file is used exclusively for running the pytest suite.

# Use a non-existent mock source, as the detector will be mocked.
SOURCE="mock://source"
DEFAULT_FRAMERATE=30.0
FIRE_DETECTION_THRESHOLD=0.99
CHECKS_PER_SECOND=5.0
LOGGING=LOGGING
VIDEO_OUTPUT=false
OPEN_CL=false
CUDA=false

# Disable all external I/O and services by default.
# Individual tests can override these via monkeypatch if needed.
EMAIL__USE_EMAILS=false
EMAIL__SENDER=test@example.com
EMAIL__SENDER_PASSWORD=testpassword
EMAIL__RECIPIENTS=["recipient@example.com"]
EMAIL__EMAIL_HOST=smtp.test.com
EMAIL__EMAIL_PORT=1025
EMAIL__SUBJECT='GOAT ON FIRE!'
EMAIL__MESSAGE='Dear friend... Its time... Its time to Fight Fire With Fire!'

DISCORD__USE_DISCORD=false
DISCORD__HOOKS=["http://test.discord.hook"]
DISCORD__MESSAGE='Dear friend... Its time... Its time to Fight Fire With Fire!'

VIDEO__SAVE_VIDEO_CHUNKS=false
VIDEO__VIDEO_OUTPUT_DIRECTORY=/tmp/test-videos
VIDEO__VIDEO_CHUNK_LENGTH_SECONDS=5
VIDEO__MAX_VIDEO_CHUNKS=2
VIDEO__CHUNKS_TO_KEEP_AFTER_FIRE=2
