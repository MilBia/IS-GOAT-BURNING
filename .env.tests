# [Test Environment Configuration]
# This file is used exclusively for running the pytest suite.

# Use a non-existent mock source, as the detector will be mocked.
SOURCE="mock://source"

# Disable all external I/O and services by default.
# Individual tests can override these via monkeypatch if needed.
EMAIL__USE_EMAILS=false
DISCORD__USE_DISCORD=false
LOGGING=false
VIDEO_OUTPUT=false
VIDEO__SAVE_VIDEO_CHUNKS=false

# Use settings that allow tests to run quickly.
FIRE_DETECTION_THRESHOLD=0.01
CHECKS_PER_SECOND=10
OPEN_CL=false
CUDA=false
